<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/text_library_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/app_name"
        android:textColor="@color/grey700"
        android:textSize="12sp"
        rv:rv_backgroundColor="#ffffff"
        rv:rv_backgroundPressColor="@color/grey700"
        rv:rv_cornerRadius="5dp"
        rv:rv_strokeColor="@color/grey700"
        rv:rv_strokeWidth="1dp"
        rv:rv_textPressColor="#ffffff" />

</LinearLayout>